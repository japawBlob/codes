-- Quartus II VHDL Template Basic

library ieee, work;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;
use work.VGApackage.all;

entity VideoMuxSwitch is
	generic (AUTO_EFFECT_ON:integer:=0);
	port 
	(   MuxAddress : std_logic_vector(1 downto 0); -- selection of switch effect
	    R1, G1, B1, R2, G2, B2: in vga_byte;
       VGA_R, VGA_G, VGA_B: out vga_byte -- output of RGB colors
	);

end entity;


architecture dataflow of VideoMuxSwitch is
   
begin

	with MuxAddress select 
     VGA_R <= R2 or R1 when "00",
	  R2 xor R1 when "01",
     R1 when "10",
     R2 when "11";
	with MuxAddress select 
     VGA_G <= G2 or G1 when "00",
	  G2 xor G1 when "01",
     G1 when "10",
     G2 when "11";
	with MuxAddress select 
     VGA_B <= B2 or B1 when "00",
	  B2 xor B1 when "01",
     B1 when "10",
     B2 when "11";
 		
		
end architecture;

